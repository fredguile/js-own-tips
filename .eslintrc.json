{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "import",
        "node",
        "prettier"
    ],
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:node/recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": [
            "warn"
        ],
        "node/no-unsupported-features": [
            "error",
            {
                "version": 10
            }
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    }
}
